{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "git status": "allow",
      "git log": "allow",
      "git diff": "allow",
      "bun run": "allow",
      "bun test": "allow"
    }
  },
  "mcp": {
    "task-master-ai": {
      "type": "local",
      "command": ["npx", "-y", "task-master-ai"],
      "enabled": true,
      "environment": {
        "TASK_MASTER_TOOLS": "standard"
      }
    }
  }
}
